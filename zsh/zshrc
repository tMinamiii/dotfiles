matrix() {
  echo -e "\033[32"; while :; do printf '%*c' $(($(od -An -N2 -i /dev/urandom | head -n 1) % 30 + 1)) $(($(od -An -N2 -i /dev/urandom | head -n 1) % 2 * 176 + 34)); done
}


    command git clone https://github.com/zdharma-continuum/zinit "$ZINIT/zinit.git" && \
        print -P "%F{33} %F{34}Installation successful.%f%b" || \
        print -P "%F{160} The clone has failed.%f%b"
fi

source "$ZINIT/zinit.git/zinit.zsh"

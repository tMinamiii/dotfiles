{
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.work", "go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": false,
        "staticcheck": true
      }
    }
  },
  "inlayHint.enable": true,
  "inlayHint.display": true,
  "inlayHint.position": "inline",
}

{
  "coc.preferences.formatOnType": false,
  "coc.preferences.jumpCommand": "edit",
  "coc.preferences.enableFloatHighlight": true,
  "coc.preferences.previewAutoClose": true,
  "suggest.autoTrigger": "always",
  "suggest.floatEnable": true,
  "suggest.minTriggerInputLength": 1,
  "suggest.noselect": true,
  "suggest.timeout": 2000,
  "suggest.triggerAfterInsertEnter": true,
  "diagnostic.enable": true,
  "diagnostic.displayByAle": true,
  "diagnostic.signOffset": 100,
  "java.home": "/usr/local/jvm/default-java",
  "python.jediEnabled": false,
  "vetur.completion.autoImport": true,
  "languageserver": {
    "phan": {
      "command": "phan",
      "args": ["--daemonize-tcp-port","4846", "--quick"],
      "filetypes": ["php"]
    },
    "efm": {
      "command": "efm-langserver",
      "args": [],
      // custom config path
      // "args": ["-c", "/path/to/your/config.yaml"],
      "filetypes": ["vim", "eruby", "markdown", "yaml"]
    },
    "golang": {
      "command": "gopls",
      "args": [],
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    }
  }
}

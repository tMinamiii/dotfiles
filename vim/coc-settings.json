{
  "coc.preferences.autoTrigger": "always",
  "coc.preferences.triggerAfterInsertEnter": false,
  "coc.preferences.minTriggerInputLength": 2,
  "coc.preferences.timeout": 5000,
  "coc.preferences.noselect": true,
  "coc.preferences.formatOnType": false,
  "coc.preferences.jumpCommand": "edit",
  "coc.preferences.diagnostic.enable": false,
  "coc.preferences.diagnostic.signOffset": 1000,
  "coc.preferences.diagnostic.errorSign": "E",
  "coc.preferences.diagnostic.warningSign": "W",
  "coc.preferences.diagnostic.infoSign": ">>",
  "pyls.trace.server":"verbose",
  "languageserver": {
    "golang": {
      "command": "gopls",
      "args": [],
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    }
  }
}
